<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>Esercizio d'esame di Tecnologie Informatiche per il Web</display-name>
	<context-param>
    	<param-name>dbUrl</param-name>
    	<param-value>jdbc:mysql://localhost:3306/db_exam</param-value>
  	</context-param>
  	<context-param>
    	<param-name>dbUser</param-name>
    	<param-value>admin</param-value>
  	</context-param>
  	<context-param>
    	<param-name>dbPassword</param-name>
    	<param-value>admin</param-value>
  	</context-param>
  	<context-param>
    	<param-name>dbDriver</param-name>
    	<param-value>com.mysql.cj.jdbc.Driver</param-value>
  	</context-param>
  	<filter>
  		<filter-name>Checker</filter-name>
  		<filter-class>it.polimi.tiw_exam.filters.Checker</filter-class>
  	</filter>
  	<filter-mapping>
  		<filter-name>Checker</filter-name>
  		<url-pattern>/CreaRiunione</url-pattern>
  		<url-pattern>/GoToAnagrafica</url-pattern>
  		<url-pattern>/GoToHomePage</url-pattern>
  		<url-pattern>/Logout</url-pattern>
  	</filter-mapping>
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>